<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/slide_image_view"
        android:layout_width="@dimen/two_hundred_dips"
        android:layout_height="@dimen/two_hundred_dips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/eighty_dips"
        android:src="@drawable/villa3" />

    <TextView
        android:id="@+id/slide_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fifty_dips"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/sixteen_dips"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_text_view_desc"
        style="@style/wrap_content"
        android:layout_below="@id/slide_text_view"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/hundred_dips"
        android:layout_marginLeft="@dimen/sixteen_dips"
        android:layout_marginRight="@dimen/sixteen_dips"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp" />

</RelativeLayout>