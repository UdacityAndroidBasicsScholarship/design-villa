<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/design_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/layout_image" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/design_image"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:padding="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#ddffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/author_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Captain America"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author_text_view"
                    android:textColor="@android:color/black"
                    tools:text="The First Avenger" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_button"
            android:contentDescription="@string/like_button"
            android:src="@drawable/ic_like_border" />
    </RelativeLayout>

</android.support.v7.widget.CardView>