<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_navigation_layout"
    tools:context="udacity.designvilla.FavouritesActivity">

    <LinearLayout
        android:id="@+id/content_holder_layout"
        style="@style/mmv">

        <android.support.v7.widget.Toolbar
            app:titleTextColor="@android:color/white"
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme" />

        <TextView
            style="@style/match_parent"
            android:gravity="center"
            android:text="Favourites"
            android:textSize="32sp" />

    </LinearLayout>

    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:id="@+id/home_navigation_view"
        style="@style/wm"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:arc_cropDirection="cropInside"
        app:arc_width="@dimen/arc_width"
        app:menu="@menu/drawer_options"
        android:layoutDirection="ltr"
        android:background="@color/colorPrimaryDark"/>


</android.support.v4.widget.DrawerLayout>
