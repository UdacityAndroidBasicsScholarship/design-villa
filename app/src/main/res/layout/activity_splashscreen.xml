<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent"
    android:background="@color/bg_color"
    tools:context="udacity.designvilla.SplashScreenActivity">


    <ImageView
        android:id="@+id/imageView"
        style="@style/match_parent"
        android:scaleType="center"
        android:src="@drawable/myvilla" />


    <ProgressBar
        android:id="@+id/loading_spinner"
        style = "@style/wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:layout_marginBottom="@dimen/fifty_dips" />



    <TextView
        style="@style/wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/sixteen_dips"
        android:text="@string/design_villa"
        android:textColor="@color/white"
        android:textSize="@dimen/twentyfour_dips"
        android:fontFamily="monospace"
        android:textStyle="bold" />
</RelativeLayout>
