<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent"
    android:background="@drawable/dv_login_bg"
    tools:context="udacity.designvilla.LoginActivity">

    <!--Imageview for App Name -->

    <ImageView
        android:id="@+id/name_ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dv_name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:contentDescription="@string/app_name"
        />

    <!-- Layout containing EmailID/Password/Forgot Password  -->

    <LinearLayout
        android:id="@+id/user_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <!-- EditText Field to let user Input Email ID-->

        <EditText
            android:id="@+id/emailId_EditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTintMode="screen"
            android:hint="@string/email_id"
            android:inputType="textEmailAddress" />

        <!-- EditText to let user Input Password-->

        <EditText
            android:id="@+id/password_EditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTintMode="screen"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <!-- Forgot Password Button-->

        <Button
            android:id="@+id/forgot_password_Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="forgotPasswordPressed"
            android:text="@string/forgot_password"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <!-- Card view to give round look to button and Elevation effect-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_layout"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <!-- Get Started button to Sign In or Sign Up user-->

        <Button
            android:id="@+id/signIn_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E91E63"
            android:onClick="signInPressed"
            android:padding="10dp"
            android:text="@string/get_started"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <!-- Layout for design before Google Log In button-->

    <LinearLayout
        android:id="@+id/signin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/googleSignIn_Button"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/log_in_text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />
    </LinearLayout>

    <!-- Google Log in button-->

    <Button
        android:id="@+id/googleSignIn_Button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/google"
        android:onClick="signInWithGooglePressed" />

</RelativeLayout>