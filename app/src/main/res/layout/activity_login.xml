<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout1"
    style="@style/match_parent"
    android:background="@drawable/gradient_animation_list"
    tools:context="udacity.designvilla.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        style="@style/wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ninety_dips"
        android:src="@drawable/design_villa" />

    <android.support.v7.widget.CardView
        style="@style/wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/twenty_dips"
        android:layout_marginTop="@dimen/fifty_dips"
        app:cardCornerRadius="@dimen/twenty_dips">

        <LinearLayout
            style="@style/wrap_content"
            android:layout_below="@id/imageView"
            android:orientation="horizontal"
            android:padding="@dimen/ten_dips">

            <ImageView
                android:layout_width="@dimen/fifty_dips"
                android:layout_height="@dimen/fifty_dips"
                android:layout_marginRight="@dimen/ten_dips"
                android:src="@drawable/googlelogo" />

            <TextView
                style="@style/wrap_content"
                android:layout_gravity="center"
                android:text="@string/signin_with_gmail"
                android:textSize="@dimen/eighteen_sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>