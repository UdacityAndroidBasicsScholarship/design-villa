<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udacity.designvilla.HomeActivity">

    <!-- The contents should be within the linear layout. You can change it to any layout -->
    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:theme="@style/AppTheme"
                app:titleTextColor="@android:color/white" />

            <!--The below Linear Layout is placed only to be replaced during fragment Transaction-->
            <LinearLayout
                android:id="@+id/activity_home_replaceable_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </FrameLayout>

    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:id="@+id/home_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:layoutDirection="ltr"
        app:arc_cropDirection="cropInside"
        app:arc_width="@dimen/arc_width"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_options" />
</android.support.v4.widget.DrawerLayout>
