<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation_layout"
    style="@style/match_parent"
    tools:context="udacity.designvilla.HomeActivity">

    <!-- The contents should be within the linear layout. You can change it to any layout -->
    <LinearLayout
        android:id="@+id/content_holder_layout"
        android:background="@color/colorPrimaryLight"

        style="@style/mmv">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme"
            app:titleTextColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/template_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:id="@+id/home_navigation_view"
        style="@style/wm"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:layoutDirection="ltr"
        app:arc_cropDirection="cropInside"
        app:arc_width="@dimen/arc_width"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_options" />


</android.support.v4.widget.DrawerLayout>
