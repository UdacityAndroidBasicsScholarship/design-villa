<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent"
    android:id="@+id/home_navigation_layout"
    tools:context="udacity.designvilla.HomeActivity">

    <!-- The contents should be within the linear layout. You can change it to any layout -->
    <LinearLayout
        android:id="@+id/content_holder_layout"
        style="@style/mmv">

        <android.support.v7.widget.Toolbar
            app:titleTextColor="@color/white"
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_header"
            android:theme="@style/AppTheme" />

        <TextView
            style="@style/match_parent"
            android:gravity="center"
            android:text="@string/this_is_the_third_activity"
            android:textSize="@dimen/thirty_sp" />

    </LinearLayout>

    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:id="@+id/home_navigation_view"
        style="@style/wm"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:arc_cropDirection="cropInside"
        app:arc_width="@dimen/hundred_dips"
        app:menu="@menu/drawer_options"
        android:layoutDirection="ltr"
        android:background="@color/colorPrimary"/>


</android.support.v4.widget.DrawerLayout>
